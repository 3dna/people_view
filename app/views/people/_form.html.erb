<%= form_for @person, html: { class: "form-horizontal" } do |f| %>
  <%= bootstrap_text_field f, :id %>
  <%= bootstrap_text_field f, :first_name %>
  <%= bootstrap_text_field f, :last_name %>
  <%= bootstrap_text_field f, :email %>

  <div class="control-group">
    <div class="controls">
      <%= f.submit "Update", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
